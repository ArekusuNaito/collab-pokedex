{
  "compilerOptions": {
    "module": "ES6",
    "target": "ESNext",
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node", //Makes your editor acknowledge node imports/requires
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true, //to import json files withing js/ts files
    "esModuleInterop": true //neeeded as well to import json files
  }
}